{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "msvc64-base",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_HOST_TRIPLET": "x64-windows",
                "VCPKG_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw64-base",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic",
                "VCPKG_HOST_TRIPLET": "x64-windows",
                "VCPKG_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "win64-base",
            "hidden": true,
            "inherits": [
                "config-base"
            ]
        },
        {
            "name": "msvc-x64-debug-win",
            "displayName": "MSVC x64 Debug Win",
            "inherits": ["win64-base", "msvc64-base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw-x64-debug-win",
            "displayName": "MinGW x64 Debug Win",
            "inherits": ["win64-base", "mingw64-base"],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Win x64 MSVC",
            "configurePreset": "msvc-x64-debug-win",
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "Win x64 MinGW",
            "configurePreset": "mingw-x64-debug-win",
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        }
    ]
}